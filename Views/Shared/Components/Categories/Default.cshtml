@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    <!-- Button to reset the filters and display the full list of books -->
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-outline-secondary">Reset</a>

    <!-- Dynamically creates buttons for each of the book categories. Can be clicked on to filter by that category -->
    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNum="1" 
           class="btn @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
    }
</div>